# AI Travel Planner 配置文件
# 复制此文件为 config.yaml 并填入您的配置值
# cp config.yaml.example config.yaml

# 服务器配置
server:
  port: "9090"
  mode: "debug"  # debug 或 release

# 数据库配置 (Supabase) - 必需
database:
  supabase_url: "your_supabase_url"
  supabase_key: "your_supabase_anon_key"
  supabase_secret: "your_supabase_service_role_key"

# 外部API配置
apis:
  # OpenAI API 配置 - 必需
  openai:
    api_key: "your_openai_api_key_here"
    base_url: "https://api.openai.com/v1"
    model: "gpt-4o-mini"
    timeout_seconds: 120

  # 高德地图API配置（可选，地图导航功能）
  amap:
    api_key: ""  # 如需使用地图功能，请填写API Key

  # 科大讯飞语音API配置（可选，语音识别功能）
  xunfei:
    app_id: ""     # 如需使用语音功能，请填写
    api_key: ""    # 如需使用语音功能，请填写
    api_secret: "" # 如需使用语音功能，请填写

# JWT配置
jwt:
  # secret 为空时将使用内置默认密钥
  secret: ""  # 如需自定义，请填写密钥
  expire_time: 24  # token过期时间（小时）

